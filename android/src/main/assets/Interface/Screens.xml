<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.lessvoid.com/nifty-gui">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
	
	<screen id="screen_load">
		<layer id="layer_background" childLayout="center">
		</layer>
		<layer id="layer_foreground" childLayout="center">
		</layer>
	</screen>
	
	<screen id="screen_menu">
		<layer id="layer_background" childLayout="center">
		</layer>
		<layer id="layer_foreground" childLayout="center">
		</layer>
	</screen>
	
	<screen id="screen_join">
		<layer id="layer_background" childLayout="center">
		</layer>
		<layer id="layer_foreground" childLayout="center">
		</layer>
	</screen>
	
	<screen id="screen_loby">
		<layer id="layer_background" childLayout="center">
		</layer>
		<layer id="layer_foreground" childLayout="center">
		</layer>
	</screen>
	
	<screen id="screen_game" controller="com.jme3.fps.MainApplication">
		<layer id="layer_background" childLayout="center" width="100%" height="100%">
			
		</layer>
		<layer id="layer_foreground" childLayout="center" width="100%" height="100%">
			<panel id="panel_buttons" childLayout="absolute" width="152px" height="224px" align="right" valign="bottom">
				<control id="button_action" name="button" label="A" x="72px" y="0px" width="64px" height="64px">
				</control>
				<control id="button_weapon" name="button" label="W" x="36px" y="72px" width="64px" height="64px">
					<interact onClick="placeBuilding()" />
				</control>
				<control id="button_crouch" name="button" label="C" x="0px" y="144px" width="64px" height="64px">
				</control>
				<control id="button_jump" name="button" label="J" x="72px" y="144px" width="64px" height="64px">
				</control>
			</panel>
		</layer>
	</screen>
